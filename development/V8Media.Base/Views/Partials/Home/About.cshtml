@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<div class="nk-box bg-dark-1">
        <div class="container text-center">
            <div class="nk-gap-6"></div>
            <div class="nk-gap-2"></div>
            <h2 class="nk-title h1">About Judge</h2>
            <div class="nk-gap-3"></div>

            <p class="lead">Formed in the early days of World of Warcraft, Judge was created by a group of individuals who wanted to push with the elitists whilst still enjoying the comfort of being casual.<br />
            Over the years, Judge has proven you can be a part of a fantastic community whilst still giving the top dogs a run for their money.
            </p>

            <div class="nk-gap-2"></div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <div class="nk-box-2 nk-box-line">
